{{#> layout}}
{{#*inline "head"}}
<link rel="stylesheet" href="../css/viewpost.css">
{{/inline}}

{{#*inline "content"}}
<div class="sidebar">
    {{!-- <div style="height: 300px; background-color: lightgreen;">
                Small map goes here
            </div> --}}
    {{#if image_url}}
    <img id="image" src="{{image_url}}"></img>
    {{else}}
    <p id="image_gone">No image available!</p>
    {{/if}}
    <p id="summary">
        <b>{{post.statusFull}}</b> at <b>{{post.campusFull}}</b> <br>
        {{post.location}} <br>
        {{post_date post.lostDate}}
    </p>
    <br>
</div>
<div class="post">
    <h2 id="title">{{post.title}}</h2>
    <hr>
    <p id="details">{{post.description}}</p>
    <table id="misctable">
        <tr>
            <th>
                <p>Contact Info:</p>
            </th>
            <td>
                <p>{{user.name}} <a href="mailto:{{user.email}}">(Contact them)</a></p>
            </td>
        </tr>
        <tr>
            <th>
                <p>Post Created:</p>
            </th>
            <td>
                <p>{{post.creationDate}}</p>
            </td>
        </tr>
        <tr>
            <th>
                <p>Item Type:</p>
            </th>
            <td>
                <p>{{post.category}}</p>
            </td>
        </tr>
    </table>
    <button onclick="window.location.href='/map'">Edit item</button>
    <form action="/api/postings/:{{post.id}}" id="deleteForm" method="post">
        <button type="submit" form="deleteForm" onClick="return confirm('Are you sure?')">Delete</button>
    </form>

</div>
{{/inline}}
{{/layout}}
