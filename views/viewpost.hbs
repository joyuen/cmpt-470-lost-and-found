<!doctype html>
<html lang="en">
    <head>
        <title>SFU Lost and Found</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, inital-scale=1">
        <link rel="stylesheet" href="../css/layout.css">
        <style>
            html {
                box-sizing: border-box;
            }

            .sidebar {
                float: right;
                width: 30%;
                margin: 5px;
            }

            .post {
                float: left;
                width: 67%;
                margin: 5px;
            }

            h2 {
                margin-bottom: 0px;
            }
            hr {
                margin: 0px;
            }
            hr +p {
                margin-top: 10px;
            }

            #misctable {
                font-size: 12px;
                border-collapse: collapse;
                border: 1px solid #CCC;
            }

            #misctable th, #misctable td {
                border: none;
            }

            #misctable th {
                text-align: right;
                padding-right: 5px;
            }

            #misctable p {
                padding: 0px;
                margin: 0px;
            }

            #misctable tr:nth-child(even) {
                background-color: #f2f2f2;
            }
            #misctable tr:nth-child(odd) {
                background-color: #f8f8f8;
            }
        </style>
    </head>

    <body>
        {{> navbar}}

        <div class="post">
            {{!-- <button style="float:right;">Contact</button> --}}
            <h2>{{title}}</h2>
            <hr>
            <p style="height: 200px;">{{detail}}</p>
            <table id="misctable">
                <tr>
                    <th><p>Contact Info:</p></th>
                    <td><p>{{posted_by}} <a href="#cool">(Contact them)</a></p></td>
                </tr>
                <tr>
                    <th><p>Post Created:</p></th>
                    <td><p>{{creation_date}}</p></td>
                </tr>
                <tr>
                    <th><p>Item Type:</p></th>
                    <td><p>{{item}}</p></td>
                </tr>
            </table>
        </div>

        <div class="sidebar">
            <div style="height: 300px; background-color: lightgreen;">
                Small map goes here
            </div>
            <p style="text-align: center; width: 100%; background-color: lightblue; margin: 0px;">
                <b>{{post_status status}}</b> at <b>{{post_campus campus}}</b> <br>
                {{location}} <br>
                {{post_date date}}
            </p>
            <br>
            <div style="height: 300px; background-color: lightyellow;">
                Image goes in here
            </div>
        </div>
    </body>
</html>
