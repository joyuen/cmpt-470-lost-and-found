{{#> layout}}
{{#*inline "head"}}
<link rel="stylesheet" href="/css/map.css">
<link rel="stylesheet" href="../css/postings.css">
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/ejs@3.0.2/ejs.min.js"></script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&callback=initMap" async>
</script>
<script type="text/javascript" src="/js/map.js"></script>
<script type="text/javascript" src="/js/postings.js"></script>
<script type="text/javascript" src="/js/b64.js"></script>
{{/inline}}

{{#*inline "content"}}
<div class="flex two">
  <div class="fourth" id="sidebar">
    {{> allpost}}
    {{> contentpost}}
    {{> mapform}}
  </div>
  <div class="three-fourth">
    <div id="floating-panel">
      <input onclick="showBurnaby();" type=button value="Burnaby">
      <input onclick="showVancouver();" type=button value="Vancouver">
      <input onclick="showSurrey();" type=button value="Surrey">
    </div>
    <div id="map"></div>
  </div>
</div>
{{/inline}}
{{/layout}}
