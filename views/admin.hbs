{{#> layout}}
{{#*inline "head"}}
{{/inline}}
{{#*inline "content"}}
<h1>Registered Users</h1>
<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>SFU ID</th>
      <th>Display Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Admin</th>
      <th />
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{id}}</td>
      <td>{{name}}</td>
      <td>{{email}}</td>
      <td>{{phone}}</td>
      <td>{{admin}}</td>
      <td>
        <span id={{id}} class="button icon is-small">
          <i class="fas fa-user-edit"></i>
        </span>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{/inline}}
{{/layout}}